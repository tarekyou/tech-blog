<div class="comments">
  {{#each this}}
  <section class="comment" id="{{id}}">
    <div class="meta">
      {{user.username}} on {{format_date created_at}}
    </div>
    <div class="text">
      {{comment_text}}
      <a href="/comment/{{id}}">
      edit or delete
      </a>
    </div>
  </section>
  {{/each}}
</div>
