<div class="comments">
  {{#each this}}
  <section class="comment">
    <div class="meta">
      {{user.username}} on {{format_date created_at}}
    </div>
    <div class="text">
      {{comment_text}}
    {{!-- {{#if loggedIn}} --}}
    <button type="button" >Edit comment</button>
    <button type="button" class="delete-comment-btn">Delete comment</button>
    {{!-- {{/if}} --}}
    </div>
  </section>
  {{/each}}
</div>